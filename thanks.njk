	{% else %}
		<meta content="https://res.cloudinary.com/netlify/image/upload/f_auto,q_auto/dusty-domains/default-card.jpg" property="og:image">
		<meta content="https://res.cloudinary.com/netlify/image/upload/f_auto,q_auto/dusty-domains/default-card.jpg" name="twitter:image">
	{% endif %}
{% endblock %}

<!-- Header -->
<header class="header-main dusty dusty-dark">
	<div class="grid">
		{% include "_includes/components/nav-main.njk" %}
		<section class="grid-narrow">

			{% if eleventy.serverless.path.age >= 1 %}
				
				<h1 class="thanks1"><span>I just shipped a </span><span class="site-age">{{ eleventy.serverless.path.age }}-year-old</span> <strong>Dusty Domain</strong> <span class="netlify">on {% include "_includes/components/_svg/netlify-logo" %}</span></h1>
			{% elif eleventy.serverless.path.age < 1 %}
				<h1 class="thanks2"><span>I just bought a domain</span> <span>& shipped the project in</span> <span>the same dang year</span> <small>(please clap)</small></h1>
			{% else %}
				<h1 class="thanks3"><span>I just shipped a </span><strong>Dusty Domain</strong> <span class="netlify">on {% include "_includes/components/_svg/netlify-logo" %}</span></h1>
			{% endif %}

			{% if eleventy.serverless.path.site %}
				<p><span>Check out my site that contributed $150 to charity. ðŸ‘‡</span></p>
			{% endif %}
		</section>
	</div>
</header>

{% if eleventy.serverless.path.site %}
<!-- Featured sites -->
<div class="grid" id="featured">
	<div class="grid-narrow featured-grid">
		<ul class="sites-list" id="featured-list">
			<li class="sites-item">
				<a href="https://{{ eleventy.serverless.path.site }}">
					<span class="site-title">{{ eleventy.serverless.path.site }}
